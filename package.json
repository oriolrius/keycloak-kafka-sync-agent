{
  "name": "keycloak-kafka-sync-agent-tests",
  "version": "1.0.0",
  "description": "API tests for Keycloak Kafka Sync Agent",
  "private": true,
  "scripts": {
    "test:api": "playwright test --config=tests/playwright.config.ts",
    "test:api:ui": "playwright test --ui --config=tests/playwright.config.ts",
    "test:api:headed": "playwright test --headed --config=tests/playwright.config.ts",
    "test:api:debug": "playwright test --debug --config=tests/playwright.config.ts",
    "test:api:report": "playwright show-report tests/test-results/html",
    "test:ui": "playwright test --config=tests/playwright-ui.config.ts",
    "test:ui:headed": "playwright test --headed --config=tests/playwright-ui.config.ts",
    "test:ui:debug": "playwright test --debug --config=tests/playwright-ui.config.ts",
    "test:ui:report": "playwright show-report tests/test-results/html-ui",
    "test:all": "npm run test:api && npm run test:ui",
    "test:scram-e2e": "playwright test tests/api/scram-authentication-e2e.spec.ts --config=tests/playwright.config.ts",
    "test:scram-e2e:headed": "playwright test tests/api/scram-authentication-e2e.spec.ts --headed --config=tests/playwright.config.ts",
    "test:scram-e2e:debug": "playwright test tests/api/scram-authentication-e2e.spec.ts --debug --config=tests/playwright.config.ts",
    "test:install": "playwright install chromium"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/node": "^20.10.0",
    "kafkajs": "^2.2.4"
  },
  "keywords": [
    "testing",
    "playwright",
    "api",
    "e2e"
  ],
  "author": "",
  "license": "ISC"
}
